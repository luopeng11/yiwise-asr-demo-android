<configuration>
    <appender name="logcat" class="ch.qos.logback.classic.android.LogcatAppender">
        <tagEncoder>
            <pattern>%logger{12}</pattern>
        </tagEncoder>
        <encoder>
            <pattern>[%-20thread] [%X{MDC_LOG_ID}] %msg</pattern>
        </encoder>
    </appender>

    <logger name="com.yiwise" level="DEBUG" />

    <root level="INFO">
        <appender-ref ref="logcat" />
    </root>
</configuration>